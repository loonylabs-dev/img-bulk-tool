{
  "watch": ["src/**/*.ts"],
  "ignore": [
    "public/**",
    "dist/**",
    "output/**",
    "node_modules/**",
    "*.test.ts",
    "*.spec.ts"
  ],
  "ext": "ts",
  "exec": "tsc -p tsconfig.dev.json && node dist/server.js",
  "delay": 3000,
  "env": {
    "NODE_ENV": "development"
  },
  "verbose": false
}
{
  "name": "img-bulk-tool",
  "version": "1.0.0",
  "description": "Bildbearbeitungs-Tool für Zerlegung, Komprimierung und Größenänderung",
  "main": "dist/server.js",
  "scripts": {
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "tsc",
    "build:backend:dev": "tsc -p tsconfig.dev.json",
    "build:frontend": "tsc -p tsconfig.frontend.json && vite build",
    "dev": "concurrently \"tsc -p tsconfig.frontend.json -w\" \"nodemon\" \"vite\"",
    "start": "node dist/server.js",
    "serve": "vite preview",
    "type-check": "tsc --noEmit && tsc -p tsconfig.frontend.json --noEmit",
    "lint": "echo 'Linting placeholder - add ESLint if needed'"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "form-data": "^4.0.4",
    "fs-extra": "^11.1.1",
    "imagemin": "^8.0.1",
    "imagemin-optipng": "^8.0.0",
    "imagemin-pngquant": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "^3.3.2",
    "sharp": "^0.33.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/fs-extra": "^11.0.4",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.19.10",
    "@types/sharp": "^0.32.0",
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2",
    "typescript": "^5.9.2",
    "vite": "^5.0.10"
  }
}
